{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "outDir": "dist",
    "allowJs": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "baseUrl": ".",
    "moduleResolution": "Node",
    "paths": {
      "@ds": ["src/utilities/ds/"],
      "@nodes": ["src/utilities/nodes/"],
      "@polyfills": ["src/utilities/polyfills/"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
